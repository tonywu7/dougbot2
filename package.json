{
    "name": "telescope2",
    "version": "0.10.2rc1",
    "description": "",
    "author": "@tonyzbf",
    "license": "GPL-3.0-or-later",
    "browserlist": [
        "defaults",
        "not ie > 0",
        "not baidu > 0",
        "not and_qq > 0",
        "not and_uc > 0",
        "> 5%"
    ],
    "private": true,
    "devDependencies": {
        "@apollo/client": "^3.3.21",
        "@graphql-codegen/cli": "^1.21.7",
        "@graphql-codegen/typescript": "^1.23.0",
        "@graphql-codegen/typescript-graphql-files-modules": "^1.18.1",
        "@graphql-codegen/typescript-operations": "^1.18.4",
        "@types/bootstrap": "^5.0.17",
        "@types/d3": "^6.7.0",
        "@types/glob": "^7.1.4",
        "@types/lodash": "^4.14.167",
        "@types/lunr": "^2.3.3",
        "@vue/compiler-sfc": "^3.1.5",
        "bootstrap": "^5.0.2",
        "concurrently": "^6.2.0",
        "css-loader": "^5.2.6",
        "d3": "^7.0.0",
        "date-fns-tz": "^1.1.4",
        "glob-promise": "^4.2.0",
        "graphql": "^15.5.1",
        "html-webpack-plugin": "^5.3.2",
        "lunr": "^2.3.9",
        "mini-css-extract-plugin": "^2.1.0",
        "nodemon": "^2.0.12",
        "sass": "^1.35.1",
        "sass-loader": "^12.1.0",
        "style-loader": "^2.0.0",
        "tocbot": "^4.12.3",
        "ts-loader": "^9.2.3",
        "typescript": "^4.3.4",
        "vue": "^3.1.5",
        "vue-loader": "^16.3.0",
        "webpack": "^5.47.0",
        "webpack-cli": "^4.7.2",
        "webpack-manifest-plugin": "^3.1.1"
    },
    "repository": {
        "url": "https://github.com/tonyzbf/telescope2"
    },
    "prettier": {
        "overrides": [
            {
                "files": "webpack.config.js",
                "options": {
                    "tabWidth": 2
                }
            }
        ],
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 80
    },
    "scripts": {
        "schema:create": "python manage.py graphql_schema --schema ts2.web.schema.schema --out instance/schema.json",
        "schema:parse": "node scripts/graphql-gen.js instance/schema.json ./ts2",
        "schema:build": "npm run schema:create && npm run schema:parse",
        "schema:watch:create": "npm run schema:create -- --watch",
        "schema:watch:parse": "nodemon --watch instance --exec 'npm run schema:parse'",
        "schema:watch": "concurrently \"npm:schema:watch:*\"",
        "watch": "npx webpack --config webpack.config.js",
        "build": "NODE_ENV=production npx webpack --config webpack.config.js"
    }
}
