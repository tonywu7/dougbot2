{
    "compilerOptions": {
        "outDir": "./build/ts2/source",
        "rootDir": "./",
        "module": "ES6",
        "target": "ES6",
        "lib": ["ES2017", "DOM", "DOM.Iterable"],
        "moduleResolution": "Node",
        "allowJs": true,
        "strict": true,
        "alwaysStrict": true,
        "composite": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "paths": {
            "web/*": ["./ts2/web/index/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "ts2/**/@types",
        ]
    },
    "include": [
        "./ts2/**/*.ts",
        "./ts2/**/*.js",
    ],
}