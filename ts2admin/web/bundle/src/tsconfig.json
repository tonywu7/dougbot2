{
    "compilerOptions": {
        "outDir": "../build",
        "rootDir": ".",
        "module": "ES6",
        "target": "ES6",
        "lib": ["ES2017", "DOM", "DOM.Iterable"],
        "moduleResolution": "Node",
        "allowJs": true,
        "strict": true,
        "alwaysStrict": true,
        "composite": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "sourceRoot": "/static/src"
    },
    "include": ["./**/*.ts", "./**/*.js"],
}