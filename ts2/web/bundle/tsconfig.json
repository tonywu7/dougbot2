{
    "compilerOptions": {
        "outDir": "../../../build/ts2/source",
        "rootDir": ".",
        "module": "ES6",
        "target": "ES6",
        "lib": ["ES2017", "DOM", "DOM.Iterable"],
        "moduleResolution": "Node",
        "allowJs": true,
        "strict": true,
        "alwaysStrict": true,
        "composite": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "typeRoots": [
            "node_modules/@types",
            "src/scripts/@types"
        ],
    },
    "include": ["./src/**/*.ts", "./src/**/*.js"],
}